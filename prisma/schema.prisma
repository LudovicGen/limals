generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  name       String
  postalCode String
  id         String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  users      User[]
}

model User {
  firstName String
  lastName  String
  username  String
  birthDate DateTime? @db.Timestamptz(6)
  email     String    @unique
  password  String
  sex       Int       @default(0)
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cityId    String @db.Uuid()
  city      City      @relation(fields: [cityId], references: [id])
  animals   Animal[]
}

model Breed {
  id      String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String
  animals Animal[]
}

model Animal {
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String?
  birthYear   Int
  sex         Int      @default(0)
  height      Int
  weight      Int?
  description String
  castrated   Boolean
  userId      String @db.Uuid()
  user        User     @relation(fields: [userId], references: [id])
  breeds      Breed[]
}
