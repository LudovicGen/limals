generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  password String
  username String @unique
}

model City {
  name       String
  postalCode String
  id         String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  users       User[]
}

model User {
  id   String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstName String
  lastName  String
  avatar    String
  username  String    @unique
  birthDate DateTime? @db.Timestamptz(6)
  email     String    @unique
  sex       Int       @default(0)
  latitude Float?
  longitude Float?
  cityId    String @db.Uuid()
  city      City      @relation(fields: [cityId], references: [id])
  animals   Animal[]
}

model Breed {
  name    String
  id      String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  animals Animal[]
}

model Animal {
  name        String?
  sex         Int     @default(0)
  height      Int
  weight      Int?
  description String
  castrated   Boolean
  birthYear   Int
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String  @db.Uuid
  user        User    @relation(fields: [userId], references: [id])
  breeds      Breed[]
}
