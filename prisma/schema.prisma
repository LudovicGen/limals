generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  name       String
  postalCode String
  id         Int    @id @default(autoincrement())
  users      User[]
}

model User {
  firstName String
  lastName  String
  username  String
  birthDate DateTime? @db.Timestamptz(6)
  email     String   @unique
  password  String
  sex       Int  @default(0)
  id        Int      @id @default(autoincrement())
  cityId    Int
  city      City     @relation(fields: [cityId], references: [id])
}
